<Grid RowColumns="RowColumns.Are1" Border="Border.Rounded" Margin="Margin.Is4.OnX" Shadow="Shadow.Default"
    Padding="Padding.Is4.OnY">
    <Column ColumnSize="ColumnSize.IsFull" Margin="Margin.Is4.OnX.OnTablet.IsAuto.OnMobile">

        <DateHeading>Friday, August 2</DateHeading>
        <Divider />

        @for (int i = 0; i < 2; i++)
        {
            int j = i;
            <MatchupCard matchup="@Api.ScheduleService.Instance().Matchups()[j]" />
        }

        <br>
        <br>

        <DateHeading>Saturday, August 3</DateHeading>
        <Divider />

        @for (int i = 2; i < 6; i++)
        {
            int j = i;
            <MatchupCard matchup="@Api.ScheduleService.Instance().Matchups()[j]" />
        }

        <br>
        <br>


        <DateHeading>Sunday, August 4</DateHeading>
        <Divider />

        @for (int i = 6; i < 8; i++)
        {
            int j = i;
            <MatchupCard matchup="@Api.ScheduleService.Instance().Matchups()[j]" />
        }

    </Column>
</Grid>
