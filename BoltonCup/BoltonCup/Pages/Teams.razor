@page "/teams"

<br>
<br>

<Grid RowColumns="RowColumns.Are2.OnTablet.Are1.OnMobile" Padding="Padding.Is4">
    <Column ColumnSize="ColumnSize.Is6.OnTablet.Is12.OnMobile" Margin="Margin.IsAuto">
        <TeamCard LineColor="Background.Primary" Team="@teamDataList[0]" />
        <br>
        <TeamCard LineColor="Background.Danger" Team="@teamDataList[1]" />
    </Column>
    <Column ColumnSize="ColumnSize.Is6.OnTablet.Is12.OnMobile" Margin="Margin.IsAuto">
        <TeamCard LineColor="Background.Warning" Team="@teamDataList[2]" />
        <br>
        <TeamCard LineColor="Background.Info" Team="@teamDataList[3]" />
    </Column>
</Grid>

@code {

    List<TeamData>? teamDataList = null;

    protected override void OnInitialized()
    {
        teamDataList = Api.TeamService.Instance().GetTeams();
    }
}