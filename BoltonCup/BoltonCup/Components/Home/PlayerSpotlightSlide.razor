@namespace BoltonCup.Components

<Grid RowColumns="RowColumns.Are4.OnTablet.Are1.OnMobile" Margin="Margin.IsAuto" Padding="Padding.Is4.OnX">
    <Column ColumnSize="ColumnSize.Is1.OnTablet" Display="Display.Block.OnTablet.None.OnMobile"></Column>
    <Column ColumnSize="ColumnSize.Is2.OnTablet.Is7.OnMobile" Margin="Margin.IsAuto" Padding="Padding.Is4.OnX"
        Width="Width.Is75.OnTablet.Is100.OnMobile" Height="Height.Rem(10)">
        <Image Source="@ImgSource" Fluid />
    </Column>
    <Column ColumnSize="ColumnSize.Is3.OnTablet.Is5.OnMobile" Margin="Margin.IsAuto.OnY"
        TextAlignment="TextAlignment.Start">
        <Heading Size="HeadingSize.Is3" TextColor="TextColor.White" Italic>
            @Name.ToUpper()
        </Heading>
    </Column>
    <Column ColumnSize="ColumnSize.Is6.OnTablet.Is12.OnMobile" Margin="Margin.IsAuto.OnY.OnTablet.IsAuto.OnMobile">
        <Paragraph TextColor="TextColor.White" Margin="Margin.IsAuto">HOMETOWN - @Hometown.ToUpper()</Paragraph>
        <Paragraph TextColor="TextColor.White" Margin="Margin.IsAuto">AGE - @Age.ToUpper()</Paragraph>
        <Paragraph TextColor="TextColor.White" Margin="Margin.IsAuto">FAVOURITE BEER - @FavBeer.ToUpper()</Paragraph>
    </Column>
</Grid>

@code {
    [Parameter] public string ImgSource { get; set; } = "placeholder.png";
    [Parameter] public string Name { get; set; } = "";
    [Parameter] public string Hometown { get; set; } = "";
    [Parameter] public string Age { get; set; } = "";
    [Parameter] public string FavBeer { get; set; } = "";

}
