@namespace BoltonCup.Components

<Grid RowColumns="RowColumns.Are3.OnTablet.Are1.OnMobile" Margin="Margin.IsAuto" Padding="Padding.Is4.OnX"
    Height="Height.Rem(21)">

    <Column ColumnSize="ColumnSize.Is1.OnTablet.Is3.OnMobile"></Column>
    <Column ColumnSize="ColumnSize.Is2.OnTablet.Is6.OnMobile" Margin="Margin.IsAuto" Padding="Padding.Is4.OnX">
        <Image Source="@ImgSource" Fluid />
    </Column>
    <Column ColumnSize="ColumnSize.Is1.OnTablet.Is3.OnMobile"></Column>

    <Column ColumnSize="ColumnSize.Is6.OnTablet.Is12.OnMobile" Margin="Margin.IsAuto">
        <Heading Size="HeadingSize.Is1" Padding="Padding.Is3.FromBottom" Italic>@Name</Heading>
        <Paragraph>Hometown - @Hometown</Paragraph>
        <Paragraph>Age - @Age</Paragraph>
        <Paragraph>Favourite Beer - @FavBeer</Paragraph>
        <br>
    </Column>
</Grid>

@code {
    [Parameter] public string ImgSource { get; set; } = "placeholder.png";
    [Parameter] public string Name { get; set; } = "";
    [Parameter] public string Hometown { get; set; } = "";
    [Parameter] public string Age { get; set; } = "";
    [Parameter] public string FavBeer { get; set; } = "";

}
