@namespace BoltonCup.Components

<Blazorise.Link To="@To" Unstyled>
    <Grid Shadow="Shadow.Default" RowColumns="RowColumns.Are2" Margin="@CardMargin" Style="min-height: 15vw;">
        <Column ColumnSize="ColumnSize.Is1"></Column>
        <Column ColumnSize="ColumnSize.Is4" Margin="Margin.IsAuto">
            <Image Source="@ImageSource" Padding="Padding.Is4" Fluid />
        </Column>
        <Column ColumnSize="ColumnSize.Is1" Background="@LineColor"></Column>
        <Column ColumnSize="ColumnSize.Is5" Margin="Margin.IsAuto">
            <Heading TextSize="TextSize.Heading2" TextWeight="TextWeight.Bold" Margin="Margin.IsAuto">@ChildContent
            </Heading>
        </Column>
    </Grid>
</Blazorise.Link>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public string ImageSource { get; set; } = "bruins-logo.png";
    [Parameter] public IFluentSpacing CardMargin { get; set; } = Margin.Is4.OnY;
    [Parameter] public string To { get; set; } = "/teams";
    [Parameter] public Background LineColor { get; set; } = Background.Body;

}