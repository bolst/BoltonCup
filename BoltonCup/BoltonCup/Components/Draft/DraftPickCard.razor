@namespace BoltonCup.Components


@if (Pick is not null)
{
    <Grid RowColumns="RowColumns.Are4" style='@($"background-color: {Pick.BgColor}")' Border="@border">
        <Column ColumnSize="ColumnSize.Is2" Margin="Margin.IsAuto">
            <Heading Size="HeadingSize.Is5" TextColor="TextColor.White" Margin="Margin.IsAuto">@Pick.GetOverallPick()
            </Heading>
        </Column>
        <Column ColumnSize="ColumnSize.Is2" Margin="Margin.IsAuto" Background="@Pick.Bg" Border="Border.Is1.Light.OnEnd.Is1.Light.OnStart">
            <Image Source="@Pick.Team.Logo" Margin="Margin.IsAuto" Fluid />
        </Column>
        <Column ColumnSize="ColumnSize.Is6" Margin="Margin.IsAuto.OnY" TextAlignment="TextAlignment.Start">
            <Heading Size="HeadingSize.Is5" TextColor="TextColor.White" Margin="Margin.IsAuto.OnY">@Pick.Player.Name!.ToUpper()</Heading>
        </Column>
        <Column ColumnSize="ColumnSize.Is2" Margin="Margin.IsAuto">
            <Heading Size="HeadingSize.Is5" TextColor="TextColor.White" Margin="Margin.IsAuto">@Pick.Player.PosAbbrev()
            </Heading>
        </Column>
    </Grid>
}

@code {

    [Parameter] public DraftPick? Pick { get; set; } = null;

    IFluentBorderColorWithSide border = Border.Is1.Light.OnAll;

}