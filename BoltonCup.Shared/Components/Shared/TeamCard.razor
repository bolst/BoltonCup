@inject NavigationManager Navigation

@if (Team is not null)
{
    <MudPaper Class="px-5 ma-5 team-card clickable" Style="@($"background-color: {Team.PrimaryHex}55;")" Elevation="5"
    onclick=@(() => Navigation.NavigateTo($"/team/{Team.Id}"))>
    <MudStack Class="d-flex align-center" Style="height: 10vh" Row="true">
        <MudImage Src="@Team.LogoUrl" Style="max-height: 100%" />
        <MudText Class="team-name" Style="@($"color: {Team?.PrimaryHex}")" Typo="Typo.h5">
            <b>@Team.ShortName.ToUpper()</b>
        </MudText>
    </MudStack>
</MudPaper>
}
else
{
    <MudSkeleton SkeletonType="SkeletonType.Rectangle" Width="30vw" Height="10vh" />
}

<style>
    .team-card {}

    .team-card:hover {
        text-decoration: underline;
    }
</style>

@code {

    [Parameter] public Data.Team? Team { get; set; }

}