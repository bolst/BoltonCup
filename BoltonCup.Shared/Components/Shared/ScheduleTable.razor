@inject Data.IBCData BCData
@inject NavigationManager Navigation

<MudSimpleTable Elevation="0" Striped="true" Hover="true" Dense>
    <thead>
        <tr>
            <th class="d-flex justify-center">Matchup</th>
            <th>Result</th>
            <th>Time</th>
            <th>Location</th>
        </tr>
    </thead>
    <tbody>
        @if (Games is not null)
        {
            @foreach (Data.BCGame game in Games)
            {
                <ScheduleRow Game="@game" />
            }
        }
    </tbody>
</MudSimpleTable>

@code {
    [Parameter] public IEnumerable<Data.BCGame>? Games { get; set; }
}