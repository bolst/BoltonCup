@namespace BoltonCup.WebClient.Components.Shared

<MudLink Typo="Typo.body2" Href="@_link" Underline="Underline.None"><b>@_label</b></MudLink>

@code {

    [Parameter]
    public Sdk.PlayerSummary? Player { get; set; }
    
    [Parameter]
    public Func<Sdk.PlayerSummary?, string>? ToStringFunc { get; set; }
    
    [Parameter]
    public string? Label { get; set; }
    
    [Parameter]
    public int? PlayerId { get; set; }

    private int? _playerId => Player?.Id ?? PlayerId;
    private string? _label => Player is not null ? _playerLabel : Label;
    
    private string? _link => _playerId is not null 
        ? $"/players/{_playerId}" 
        : null;

    private string? _playerLabel => ToStringFunc is not null
        ? ToStringFunc(Player)
        : Player?.FullName;

}