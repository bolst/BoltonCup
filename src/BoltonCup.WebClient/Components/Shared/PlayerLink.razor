@namespace BoltonCup.WebClient.Components.Shared

<MudLink Typo="Typo.body2" Href="@_link" Underline="Underline.None"><b>@_label</b></MudLink>

@code {

    [Parameter]
    public Sdk.PlayerSummary? Player { get; set; }
    
    [Parameter]
    public Func<Sdk.PlayerSummary?, string>? ToStringFunc { get; set; }

    private string? _link => Player is not null 
        ? $"/players/{Player.Id}" 
        : null;

    private string? _label => ToStringFunc is not null
        ? ToStringFunc(Player)
        : Player?.FullName;

}