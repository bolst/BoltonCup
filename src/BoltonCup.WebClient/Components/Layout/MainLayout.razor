@inherits LayoutComponentBase

<MudThemeProvider Theme="_theme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout Class="d-flex flex-column" Style="min-height: 100vh">
    <AppBar />
    <MudMainContent>
        @Body
    </MudMainContent>
    <Footer />
</MudLayout>


@code {

    private MudTheme _theme = new()
    {
        PaletteLight = new PaletteLight
        {
            Primary = "#0B2551",
            Secondary = "#EB443A",
            Tertiary = "#DDCBA4",
            AppbarBackground = "#191A21",
        }
    };

}