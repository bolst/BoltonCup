@inherits LayoutComponentBase

<MudThemeProvider Theme="_theme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <AppBar />
    <MudMainContent>
        <div class="my-2 mx-4">
            @Body
        </div>
    </MudMainContent>
</MudLayout>


@code {

    private MudTheme _theme = new()
    {
        PaletteLight = new PaletteLight
        {
            Primary = "#0B2551",
            Secondary = "#EB443A",
            Tertiary = "#DDCBA4",
            AppbarBackground = "#191A21",
        }
    };

}