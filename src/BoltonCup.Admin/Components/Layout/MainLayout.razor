@inherits LayoutComponentBase
@inject Common.Theme.BoltonCupTheme Theme

<MudThemeProvider Theme="GetTheme()" IsDarkMode="true" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="ToggleDrawer" />
        <MudSpacer />
        <UserMenu />
    </MudAppBar>
    <NavMenu @bind-Open="_isDrawerOpen" />
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>


@code {

    private bool _isDrawerOpen = true;

    private void ToggleDrawer() => _isDrawerOpen = !_isDrawerOpen;

    private MudTheme GetTheme()
    {
        var theme = Theme.MudTheme;
        theme.PaletteLight.AppbarBackground = theme.PaletteLight.Primary;
        return theme;
    }
    
}