@inject IDialogService DialogService

<MudIconButton Class="flex-grow-1 rounded-0" OnClick="OpenDialog" Variant="Variant.Text" Color="IconColor" Icon="@Icons.Material.Filled.Menu" />

<MudDialog @bind-Visible="_visible" Options="_dialogOptions" Style="background-color: transparent; box-shadow: none;">
    <DialogContent>
        @ChildContent
    </DialogContent>
</MudDialog>

<style>
    .dialog-bkg {
        backdrop-filter: blur(10px);
    }
</style>

@code {

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter] 
    public Color IconColor { get; set; } = Color.Default;

    private bool _visible;

    private readonly DialogOptions _dialogOptions = new()
    {
        FullWidth = true,
        BackgroundClass = "dialog-bkg",
        NoHeader = true
    };

    private void OpenDialog() => _visible = true;

}