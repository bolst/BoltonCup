
<MudText HtmlTag="li"><b>@LabelStr</b> @ChildContent</MudText>

@code{

    [Parameter] 
    public string Label { get; set; } = string.Empty;

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    private string LabelStr => string.IsNullOrEmpty(Label) ? string.Empty : $"{Label}:";

}