

<MudChip T="string" Variant="Variant.Outlined" Color="_color" Style="@Style">@Type</MudChip>


@code {

    [Parameter] 
    public BCGame? Game { get; set; }

    [Parameter]
    public string? Type { get; set; }

    [Parameter] 
    public string Style { get; set; } = string.Empty;
    
    private Color _color = Color.Default;

    protected override void OnParametersSet()
    {
        Type ??= Game?.type;
        
        _color = Type switch
        {
            "Round robin" => Color.Primary,
            "Quarter finals" => Color.Secondary,
            "Semis" => Color.Info,
            "Finals" => Color.Warning,
            _ => Color.Default,
        };
    }

}