@page "/"

@attribute [Authorize]

<PageTitle>Bolton Cup Draft</PageTitle>

<MudGrid Spacing="2">
    <MudItem xs="3">
        <MudPaper Width="100%" Height="90vh" Class="mud-theme-surface" Elevation="3">
            <CurrentTeamDraftBoard />
        </MudPaper>
    </MudItem>
    <MudItem xs="7">
        <MudPaper Width="100%" Height="90vh" Class="mud-theme-surface" Elevation="3">
            <PlayerTable />
        </MudPaper>
    </MudItem>
    <MudItem xs="2">
        <MudPaper Width="100%" Height="90vh" Class="mud-theme-surface" Elevation="3">
            <DraftStatus />
        </MudPaper>
    </MudItem>
</MudGrid>