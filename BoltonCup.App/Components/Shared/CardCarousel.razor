@inject IJSRuntime JSRuntime

<div class="@Class">
    @ChildContent
</div>

@code{

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter] 
    public string Class { get; set; } = "main-carousel";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("initCarousel", Class);
        }
    }

}